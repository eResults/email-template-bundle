{
    "name": "eresults/email-template-bundle",
    "type": "symfony-bundle",
    "description": "Easily render email subject, body, etc. from a single template or even a database entry.",
    "keywords": ["emails integration","twig email", "doctrine email"],
    "homepage": "http://github.com/eresults/email-template-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Niels Janssen",
            "email": "nielsjanssen@eresults.nl"
        },
        {
            "name": "eResults",
            "homepage": "https://eresults.nl"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/dependency-injection": "^4.0|^5.0",
        "symfony/config": "^4.0|^5.0",
        "symfony/http-kernel": "^4.0|^5.0",
        "symfony/yaml": "^4.0|^5.0",
        "twig/twig": "~2.0|~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "dg/bypass-finals": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "eResults\\EmailTemplateBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "eResults\\EmailTemplateBundle\\": "tests/"
        }
    }
}
